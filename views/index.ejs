</div>
<div class="choice-wrap enroll-wrap">
    <div class="container">
        <div class="title">
            <h1 style="color:white;"><%=_index.CallToEnroll.Heading %></h1>
        </div>
        <h4 style="color:white"><i><%=_index.CallToEnroll.Message %></i></h4>
        <h2 style="color:white; padding-top:15px;"><i class="fa fa-phone-square" aria-hidden="true"></i>&nbsp;<%=_index.CallToEnroll.PhoneNo %></h2>
    </div>
</div>

<div class="blog-wrap flight-wrap " id="events">
    <div class="container">
        <div class="title">
            <h1 class="colorDarkBlue"> School Events </h1>
        </div>
        <div class="swiper">
            <div class="Event-Wrapper">
                <ul class="unorderList swiper-wrapper">
                    <% for (var i = 0; i < _index.Events.length; i++) { %>
                        <li class="swiper-slide">
                            <div class="blog_box">
                                <div class="blogImg">
                                    <img src="<%= _index.Events[i].Url %>" alt="">
                                </div>
                                <div class="path_box">
                                    <h4 style="color:#083372"><%= _index.Events[i].Heading %></h4>
                                    <p><%= _index.Events[i].Message %></p>
                                </div>
                            </div>
                        </li>
                   <% } %>
                </ul>

                <div class="swiper-pagination"></div>
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
            </div>
        </div>
    </div>
</div>

<div class="blog-wrap flight-wrap" style="padding-top:0px; padding-bottom:0px" id="videos">
    <div class="container">
        <div class="title">
            <h1 class="colorDarkBlue"> School Videos </h1>
        </div>
        <div class="swiper">
            <div class="Video-Wrapper">
                <ul class="unorderList swiper-wrapper">
                    <% for (var i=0; i < _index.Videos.length; i++) { %>
                        <li class="swiper-slide">
                            <div class="blog_box">
                                <div class="blogImg">
                                    <video style="width:100%; height:350px;" controls>
                                        <source src="<%= _index.Videos[i].Url %>" type="video/mp4">
                                        Your browser does not support the video tag.
                                    </video>
                                </div>
                                <div class="path_box">
                                    <h4 style="color:#083372"><%= _index.Videos[i].Heading %></h4>
                                    <p><%= _index.Videos[i].Message %></p>
                                </div>
                            </div>
                        </li>
                    <%}%>
                </ul>
                <div class="swiper-pagination"></div>
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
            </div>
        </div>
    </div>
</div>

<!-- Popup -->
<div id="popup" class="popup-overlay">
    <div class="popup-content">
        <span class="close-btn" onclick="closePopup()">&times;</span>
        <img class="popupImg" src="<%= _index.PopupImageUrl %>" alt="PopUp Image">
    </div>
</div>

