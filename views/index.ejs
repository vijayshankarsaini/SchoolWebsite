<script>
    // Show popup 2 seconds after page load
    window.onload = function () {
        setTimeout(function () {
            document.getElementById('popup').classList.add('active');
        }, 1000); // 2000 milliseconds = 2 seconds
    };

    // Close popup
    function closePopup() {
        document.getElementById('popup').classList.remove('active');
    }
</script>